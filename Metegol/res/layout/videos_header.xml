<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.pmovil.soccer"
    android:id="@+id/container_video_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@color/gray_item">

    <ProgressBar
        android:id="@+id/progressBar_Video_Item"
        style="?android:attr/progressBarStyle"
        android:paddingTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"/>

    <ImageView
        android:id="@+id/iv_thumbnail_video"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"/>

    <com.components.TextViewPlus
        android:id="@+id/tv_desc_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/iv_thumbnail_video"
        android:maxLines="4"
        android:text=""
        android:textColor="@color/black_numbers"
        android:textSize="13sp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        foo:customFont="@string/font_name"/>

    <ImageView
        android:id="@+id/iv_play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="80dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/play_icon" />

</RelativeLayout>