<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.pmovil.soccer"
    android:id="@+id/container_team_rows"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.components.TextViewPlus
        android:id="@+id/tv_selection_team_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:padding="8dp"
        android:text="@string/MenuOptNotificationKey"
        android:textColor="@color/black_numbers"
        android:textColorHint="@color/black_numbers"
        android:textSize="18sp"
        foo:customFont="@string/font_name" />

    <ToggleButton
        android:id="@+id/switch_team_row"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/switch_background"
        android:button="@null"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>