<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.pmovil.soccer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/gray_item">

    <ProgressBar
        android:id="@+id/progressBarNews"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="175dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_news"
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <com.components.TextViewPlus
        android:id="@+id/tv_title_news"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/iv_news"
        android:lineSpacingExtra="-10dp"
        android:maxLines="3"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="@color/green_blue"
        android:textColorHint="@color/green_blue"
        android:textSize="26sp"
        foo:customFont="@string/font_name_bold" />

    <com.components.TextViewPlus
        android:id="@+id/tv_desc_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_title_news"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:maxLines="4"
        android:text=""
        android:textColor="@color/black_numbers"
        android:textSize="21sp"
        foo:customFont="@string/font_name" />

</RelativeLayout>