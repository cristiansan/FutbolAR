<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.pmovil.soccer"
    android:id="@+id/container_scorers_rows"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_emblem_team_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center" />

    </RelativeLayout>

    <com.components.TextViewPlus
        android:id="@+id/tv_name_player"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/container"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="340dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/black_numbers"
        android:textColorHint="@color/black_numbers"
        android:textSize="26sp"
        foo:customFont="@string/font_name" />

    <com.components.TextViewPlus
        android:id="@+id/tv_tableColumn_tot"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/blue_green"
        android:textColorHint="@color/blue_green"
        android:textSize="26sp"
        foo:customFont="@string/font_name_bold" />

</RelativeLayout>